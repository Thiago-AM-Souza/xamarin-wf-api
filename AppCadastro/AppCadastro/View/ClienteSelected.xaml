<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:Informacoes="clr-namespace:Informacoes"
             x:Class="AppCadastro.View.ClienteSelected"
             x:DataType="Informacoes:Cliente">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label x:Name="Teste" Text="CLIENTE" TextColor="WhiteSmoke" FontSize="Title" HorizontalTextAlignment="Center" Padding="4"></Label>
            <Label x:Name="txtNome" Text="" FontSize="Body"></Label>
            <Label x:Name="txtEmail" Text="" FontSize="Body"></Label>
            <Label x:Name="txtTelefone" Text="" FontSize="Body"></Label>
            <Button x:Name="btnAtualizarCadastro" Text="Atualizar" Clicked="btnAtualizarCadastro_Clicked" FontSize="Medium"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>