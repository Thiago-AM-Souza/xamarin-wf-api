<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadastro.View.ListaClientes">
    <ScrollView>
        <StackLayout>
            <Label Text="Listagem de Clientes" FontSize="Medium" HorizontalOptions="Center" FontAttributes="Bold"></Label>
            <SearchBar x:Name="pesquisaCliente" Placeholder="Informe a pesquisa" TextChanged="PesquisaCliente_TextChanged"></SearchBar>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btnAddCliente" Text="Adicionar Novo" Clicked="btnAddCliente_Clicked"></Button>
                <Button x:Name="btnAtualizar" Text="Atualizar" Clicked="btnAtualizar_Clicked"></Button>
            </StackLayout>
            <ListView x:Name="ListViewCliente" VerticalOptions="FillAndExpand"></ListView>
        </StackLayout>
    </ScrollView>
</ContentPage>